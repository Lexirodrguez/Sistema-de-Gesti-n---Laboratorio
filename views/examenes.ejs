<!DOCTYPE html>
<html>
  <head>
    <title>Gestión de Exámenes</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <h1>Lista de Exámenes</h1>
    <nav>
      <ul>
        <li><a href="/">Inicio</a></li>
      </ul>
    </nav>

    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Nombre</th>
          <th>Precio</th>
          <th>Descripción</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% examenes.forEach(examen => { %> 
          <tr>
            <td><%= examen.id_examenes %></td>
            <td><%= examen.nombre_examenes %></td>
            <td><%= examen.precio_examenes %>$</td>
            <td><%= examen.descripcion_examenes %></td>
            <td>
              <form action="/examenes/<%= examen.id_examenes %>/eliminar" method="POST" style="display:inline;">
                <button type="submit" onclick="return confirm('¿Eliminar examen?')">Eliminar</button>
              </form>
             
              <a href="/examenes/<%= examen.id_examenes %>/editar">
                <button type="button">Editar</button>
              </a>
            </td>
          </tr> 
        <% }); %>
      </tbody>
    </table>

    <hr>

    <section>
      <h2><%= examenEditar ? 'Editar Examen' : 'Agregar Nuevo Examen' %></h2>
      
      <form action="<%= examenEditar ? '/examenes/' + examenEditar.id_examenes + '/actualizar' : '/examenes/nuevo' %>" method="POST">
        
        <label for="nombre">Nombre:</label> 
        <input type="text" id="nombre" name="nombre_examenes" value="<%= examenEditar ? examenEditar.nombre_examenes : '' %>" required> 
        
        <label for="precio">Precio:</label> 
        <input type="number" id="precio" name="precio_examenes" step="0.01" value="<%= examenEditar ? examenEditar.precio_examenes : '' %>" required> 

        <label for="descripcion">Descripción:</label> 
        <input type="text" id="descripcion" name="descripcion_examenes" value="<%= examenEditar ? examenEditar.descripcion_examenes : '' %>" required>

        <button type="submit">
          <%= examenEditar ? 'Guardar Cambios' : 'Agregar Examen' %>
        </button>
        
        <% if (examenEditar) { %>
          <a href="/examenes"><button type="button">Cancelar</button></a>
        <% } %>
      </form>
    </section>
  </body>
</html>